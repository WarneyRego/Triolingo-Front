      "description": "Aprenda a cumprimentar em inglês.",
      "level": 1,
      "language": "en-US",
      "exercises": [
        {
          "id": "ex-001",
          "type": "multiple-choice",
          "question": "Como se diz 'Olá' em inglês?",
          "options": [
            { "label": "Hello", "isCorrect": true },
            { "label": "Goodbye", "isCorrect": false },
            { "label": "Please", "isCorrect": false },
            { "label": "Yes", "isCorrect": false }
          ],
          "feedback": {
            "correct": "Muito bem! 'Hello' é a forma certa de dizer 'Olá'.",
            "wrong": "A resposta correta é 'Hello'."
          }
        },
        {
          "id": "ex-002",
          "type": "translate",
          "question": "Traduza: 'Bom dia'",
